@model IRNA.Web.ViewModels.LiveViewModel.ChannelRootVM
@{
    ViewBag.Title = "شبکه‌ها";
}

<!--http://tv.irna.ir/live/stream/index.m3u8-->
@section Styles {
    <link href="@Url.Content("~/Assets/css/movie-detail.css")" rel="stylesheet" type="text/css" />
    <link href="~/Assets/video-js.css" rel="stylesheet">

}


<main class="wraper pb-3">
    <!-- images and detail of movie -->
    <div class="movie-images row p-5" style="display: -webkit-box;">
        @foreach (var item in Model.data)
        {
            <a class="col-md-4  p-2  rounded rounded-2 d-flex align-items-center justify-content-center border border-4 m-1" href="/live?id=@item.id">
                    <img class="rounded rounded-2" src="@($"{Settings.BaseUrlIptv}{item.logo}")" />
            </a>
        }
    </div>
    <!-- images and detail of movie -->
    <!-- users comments -->
</main>
