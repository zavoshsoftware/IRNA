@model IRNA.Web.ViewModels.ContentResponseVM
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="wraper pb-3 container">
    <div class="user-dashboard-container">
        <div class="user-dashboard">
            <span class="bi bi-person-fill"></span>
        </div>
        <hr />
        <div class="row">

            @foreach (var item in Model.list)
            {
                <div class="col-md-3 pb-5">
                    <div class="swiper-slide">

                        <a href="/content/@item.id" class="latest-movies-content text-light nav-link">
                            <img src="@($"{Settings.BaseUrl}iptv/irna/rest/v2/images/downloadGalleryImage" +
                    $"?type=content&id={item.id}&code={Settings.ContentDetailsGalleryCode}&position=0")"/>
                            <span>@item.title</span>
                        </a>
                    </div>
                </div>

            }
            <div class="d-flex flex-column big-padding">

            </div>
        </div>
    </div>
</main>