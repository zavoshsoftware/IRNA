@model IRNA.Web.ViewModels.ContentResponseVM

<div class="main-slider-container">
    <div class="swiper main-slider">
        <div class="swiper-wrapper">
            @foreach (var item in Model.list)
            {
                <div class="swiper-slide fake-slide"> 
                    <img src="~/Assets/images/hamrafigh.jpg"
                         class="d-block d-lg-none img-m"
                         alt="hamrafigh" />
                    <span class="quick-watch text-light py-3 rounded-pill rounded-end">
                        <span class="px-2">پخش فوری</span>
                        <span class="me-4 ms-2 circle"></span>
                    </span>
                    <button class="watch-video text-light btn rounded-pill position-absolute translate-middle">
                        پخش فیلم
                    </button>
                </div>
            }
        </div>
        <div class="swiper-button-next d-none d-lg-inline-flex"></div>
        <div class="swiper-button-prev d-none d-lg-inline-flex"></div>
        <div class="swiper-pagination d-lg-none"></div>
    </div>
</div>